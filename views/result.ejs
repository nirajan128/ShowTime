<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random show Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-dark">

    <nav class="navbar navbar-expand-md navbar-dark bg-dark shadow-lg">
        <div class="container-fluid p-2">
            <a class="navbar-brand text-success fw-bolder " href="index.ejs">SHOW TIME </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse p-1 justify-content-end" id="navbarCollapse">
                <form action="/search" method="get" class="d-flex" id="searchForm">
                    <input type="text" name="entry" class="form-control me-2" placeholder="Enter a show">
                    <button id="butt" class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
        </div>
    </nav>


    <div class="p-5 mb-4 bg-dark rounded-3 ">
        <div class="container-fluid py-5 text-white">
            <h1 class="display-5 fw-bold text-success">SHOW TIME</h1>
            <p class="col-md-8 fs-4">Your ultimate destination for all things TV - from the latest episodes and exclusive interviews to behind-the-scenes
            insights. Stay informed, entertained, and ahead of the curve with our comprehensive TV show information website.</p>
            <form action="/getData" method="GET">
                <button type="submit" name="country" value="us" class="btn btn-success">US</button>
                <button type="submit" name="country" value="gb" class="btn btn-success">UK</button>
                <button type="submit" name="country" value="au" class="btn btn-success">Australia</button>
            </form>
            <form action="/" method="get">
                <button type="submit" class="btn btn-success">Back to Home</button>
            </form>
        </div>

        <div class="container mt-5 bg-dark ">
            <h3 class="text-white">Region:<%= country %></h3>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-5">
                <% info.forEach(movies=>{ %>
                    <div class="col shadow mb-2" >
                        <div class="card-img-top" width="100%" height="300">
                            <% if (movies.show.image && movies.show.image.medium) { %>
                                <img src="<%= movies.show.image.medium %>" alt="<%= movies.show.name %>" height="300"
                                    width="100%">
                                <% }else{ %>
                                    <img src="" alt="No image found" srcset="" height="300" width="100%">
                                    <% } %>
                        </div>
                        <div class="card-body bg-light p-4 opacity-80 " height="100%">
                            <h4>
                                <%= movies.show.name %>
                            </h4>
                            <p class="mb-0"> <strong>Type: </strong>
                                <%= movies.show.type %>
                            </p>
                            <p class="mb-0"> <strong>Language: </strong>
                                <%= movies.show.language %>
                            </p>
                            <p class="mb-0"> <strong>Status: </strong>
                                <%= movies.show.status %>
                            </p>
                            <p class="mb-0"> <strong>Schedule: </strong>
                                <%= movies.show.schedule.time %>
                            </p>
                            <form action="/getSingleShow" method="GET">
                                <button type="submit" name="id" value=<%= movies.show.id %>
                                    class="btn btn-success mt-3">More</button>
                            </form>
                        </div>


                    </div>
                    <% }) %>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
</body>
</html>